<div class="container">
  <div class="row">
    <div class = "col-xl-4 mt-4">
      <h4 style = "background-color: #d3d3d3;">
        <%=@customer.last_name %>
        <%=@customer.first_name %>
        さんの会員情報編集
      </h4>
    </div>
  </div>
  <div class="row">
    <div class = "col-xl-8 mt-4">
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">会員ID</span>
        <%=@customer.id %>
      </div>
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <div class="form-group d-flex align-items-center">
        <div style = "width: 20%;">
          <label for="customer_name">氏名</label>
        </div>
        <%= f.text_field :last_name ,class: "form-control last_name", style: "width: 30%;" %>
        <%= f.text_field :first_name ,class: "form-control first_name ml-5", style: "width: 30%;" %>
      </div>
      <div class="form-group d-flex align-items-center">
        <div style = "width: 20%;">
          <label for="customer_name_kana">フリガナ</label>
        </div>
        <%= f.text_field :last_name_kana ,class: "form-control last_name_kana", style: "width: 30%;" %>
        <%= f.text_field :first_name_kana ,class: "form-control first_name_kana ml-5", style: "width: 30%;" %>
      </div>
      <div class="form-group d-flex align-items-center">
        <div style = "width: 20%;">
          <label for="customer_postal_code">郵便番号</label>
        </div>
        <%= f.text_field :postal_code ,class: "form-control postal_code", style: "width: 30%;" %>
      </div>
      <div class="form-group d-flex align-items-center">
        <div style = "width: 20%;">
          <label for="customer_address">住所</label>
        </div>
        <%= f.text_field :address ,class: "form-control address", style: "width: 66%;" %>
      </div>
      <div class="form-group d-flex align-items-center">
        <div style = "width: 20%;">
          <label for="customer_telephone_number">電話番号</label>
        </div>
        <%= f.text_field :telephone_number ,class: "form-control telephone_number", style: "width: 30%;" %>
      </div>
      <div class="form-group d-flex align-items-center">
        <div style = "width: 20%;">
        <label for="customer_email">メールアドレス</label>
        </div>
        <%= f.text_field :email ,class: "form-control email", style: "width: 30%;" %>
      </div>
      <div class="form-group">
        <label for="item_is_deleted">会員ステータス</label>

        <%= f.radio_button :is_deleted , false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted , true %>
        <%= f.label :is_deleted, "退会" %>

      </div>
      <div class="form-group text-center">
        <%= f.submit '変更を保存' ,class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>