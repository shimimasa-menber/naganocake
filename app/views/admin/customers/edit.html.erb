<div class="container">
  <div class="row">
    <div class = "col-xl-8 offset-xl-2">
      <div class="form-group d-flex align-items-center">
        <%=@customer.last_name %>
        <%=@customer.first_name %>
        さんの会員情報編集
        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
          <div class="form-group d-flex align-items-center">
            会員ID
            <%=@customer.id %>
          </div>
          <div class="form-group d-flex align-items-center">
            <div style = "width: 20%;">
              <label for="customer_name">氏名</label>
            </div>
            <%= f.text_field :last_name ,class: "form-control last_name", style: "width: 40%;" %>
            <%= f.text_field :first_name ,class: "form-control first_name", style: "width: 40%;" %>
          </div>
          <div class="form-group d-flex align-items-center">
            <div style = "width: 20%;">
              <label for="customer_name_kana">フリガナ</label>
            </div>
            <%= f.text_field :last_name_kana ,class: "form-control last_name_kana", style: "width: 40%;" %>
            <%= f.text_field :first_name_kana ,class: "form-control first_name_kana", style: "width: 40%;" %>
          </div>
          <div class="form-group d-flex align-items-center">
            <div style = "width: 20%;">
              <label for="customer_postal_code">郵便番号</label>
            </div>
            <%= f.text_field :postal_code ,class: "form-control postal_code", style: "width: 40%;" %>
          </div>
          <div class="form-group d-flex align-items-center">
            <div style = "width: 20%;">
              <label for="customer_address">住所</label>
            </div>
            <%= f.text_field :address ,class: "form-control address", style: "width: 40%;" %>
          </div>
          <div class="form-group d-flex align-items-center">
            <div style = "width: 20%;">
              <label for="customer_telephone_number">電話番号</label>
            </div>
            <%= f.text_field :telephone_number ,class: "form-control telephone_number", style: "width: 40%;" %>
          </div>
          <div class="form-group d-flex align-items-center">
            <div style = "width: 20%;">
              <label for="customer_email">メールアドレス</label>
            </div>
            <%= f.text_field :email ,class: "form-control email", style: "width: 40%;" %>
          </div>
          <div class="form-group">
            <label for="item_is_active">会員ステータス</label>
            <%= f.radio_button :is_active , "有効" %> 有効 <%= f.radio_button :is_active , "退会" %> 退会
          </div>
          <div class="form-group">
            <%= f.submit '変更を保存' ,class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>