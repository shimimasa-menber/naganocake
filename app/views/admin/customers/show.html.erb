<div class="container">
  <div class="row">
    <div class = "col-xl-4 offset-xl-2 mt-4">
      <h4 style = "background-color: #d3d3d3;">
        <%= @customer.last_name %>
        <%= @customer.first_name %>
        さんの会員詳細
      </h4>
      <div class="form-group d-flex align-items-center mt-5">
        <span class = "mr-5">会員ID</span>
        <%= @customer.id %>
      </div>
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">氏名</span>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </div>
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">郵便番号</span>
        <%= @customer.postal_code %>
      </div>
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">住所</span>
        <%= @customer.address %>
      </div>
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">電話番号</span>
        <%= @customer.telephone_number %>
      </div>
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">メールアドレス</span>
        <%= @customer.email %>
      </div>
      <div class="form-group d-flex align-items-center">
        <span class = "mr-5">会員ステータス</span>
        <% if @customer.is_deleted == false %>
        <div class = "text-success">有効</div>
        <% else %>
        <div class = "text-secondary">退会</div>
        <% end %>
      </div>
      <div class="form-group d-flex align-items-center mt-5">
        <%= link_to edit_admin_customer_path(@customer.id) do %>
          <%= submit_tag '編集する' ,class: "btn btn-success mr-5" %>
        <% end %>
        <%= link_to admin_path do %>
          <%= submit_tag '注文履歴一覧を見る' ,class: "btn btn-primary ml-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>