<div class="container">
  <div class="row">
    <div class = "col-xl-6 offset-xl-2 mt-4">
      <h4 style = "background-color: #d3d3d3; width: 30%;">ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <div class="form-group d-flex align-items-center mt-5">
          <div style = "width: 20%;">
            <label for="genre_name">ジャンル名</label>
          </div>
          <%= f.text_field :name ,class: "form-control name", style: "width: 80%;" %>
        </div>
        <div class="form-group text-center mt-5">
          <%= f.submit '変更を保存' ,class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>