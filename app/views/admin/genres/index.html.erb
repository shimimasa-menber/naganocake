<div class="container">
  <div class="row">
    <div class = "col-xl-10 offset-xl-1">
      <h3>ジャンル一覧・追加</h3>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label for="genre_name">ジャンル名</label>
          </div>
          <%= f.text_field :name ,class: "form-control name", style: "width: 30%;" %>
          <%= f.submit '新規登録' ,class: "btn btn-success", style: "width: 30%;" %>
        </div>
      <% end %>
    </div>
    <div class = "col-xl-6 offset-xl-3">
      <table class = "table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <td><%= genre.name %></td>
            <td>
              <%= link_to edit_admin_genre_path(genre.id) do %>
                <%= submit_tag '編集する' ,class: "btn btn-success" %>
              <% end %>
            </td>
          <% end %>
        </tbody>
    </div>
  </div>
</div>