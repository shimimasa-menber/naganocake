<div class="container">
  <div class="row">
    <div class = "col-xl-6 offset-xl-3">
      <h3>商品編集</h3>
      <% if @item.errors.any? %>
      <%= @item.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label for="item_image">商品画像</label>
          </div>
          <%= f.file_field :image, class: "form-control-file image", style: "width: 80%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label for="item_name">商品名</label>
          </div>
          <%= f.text_field :name ,class: "form-control name", style: "width: 80%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label for="item_introduction">商品説明</label>
          </div>
          <%= f.text_area :introduction ,class: "form-control introduction", style: "width: 80%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label for="item_genre">ジャンル</label>
          </div>
          <%= f.select :genre_id, [ ["ケーキ", 1], ["プリン", 2],["焼き菓子", 3],["キャンディ", 4] ], prompt: "--選択してください--", style: "width: 80%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 20%;">
            <label for="item_price">税抜価格</label>
          </div>
          <%= f.text_field :price ,class: "form-control price", style: "width: 80%;" %>円
        </div>
        <div class="form-group">
          <label for="item_is_active">販売ステータス</label>
          <%= f.radio_button :is_active , "販売中" %> 販売中 <%= f.radio_button :is_active , "販売停止中" %> 販売停止中
        </div>
        <div class="form-group">
          <%= f.submit '変更を保存' ,class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>