<div class="container">
  <div class="row">
    <div class = "col-xl-10 offset-xl-1">
      <h3>商品一覧</h3>

      <table class = "table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <td><%=item_id %></td>
            <%= link_to admin_item_path(item.id) do %>
              <td><%=item.name %></td>
            <% end %>
            <td><%=price %></td>
            <td><%=genre_id %></td>
            <td><%=is_active %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>