<div class="container">
  <div class="row">
    <div class = "col-xl-8 offset-xl-2">
      <h3>商品新規登録</h3>
      <% if @item.errors.any? %>
      <%= @item.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <div class="form-group">
          <label for="item_image">商品画像</label>
          <%= f.file_field :image, class: "form-control-file image" %>
        </div>
        <div class="form-group">
          <label for="item_name">商品名</label>
          <%= f.text_field :name ,class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="item_introduction", style:"display: inline-block;">商品説明</label>
          <%= f.text_area :introdution ,class: "form-control introduction", style:"display: inline-block;" %>
        </div>
        <div class="form-group">
          <label for="item_genre">ジャンル</label>
          <%= f.select :genre ,class: "form-control genre" %>
        </div>
        <div class="form-group">
          <label for="item_price">税抜価格</label>
          <%= f.text_field :price ,class: "form-control price", style:"display: inline-block; width: 95%;" %>円
        </div>
        <div class="form-group">
          <label for="item_is_active">販売ステータス</label>
          <%= f.radio_button :is_active , "販売中" %> 販売中 <%= f.radio_button :is_active , "販売停止中" %> 販売停止中
        </div>
        <div class="form-group">
          <%= f.submit '新規登録' ,class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>