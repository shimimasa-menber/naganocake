<div class="container">
  <div class="row">
    <div class = "col-xl-3">
      <h3>商品詳細</h3>
      <%= image_tag @item.image, :size => '200x200' %>
    </div>
    <div class = "col-xl-7 offset-xl-2">
      <div class="form-group d-flex align-items-center">
        商品名
        <%=@item.name %>
      </div>
      <div class="form-group d-flex align-items-center">
        商品説明
        <%=@item.introduction %>
      </div>
      <div class="form-group d-flex align-items-center">
        ジャンル
        <%=@item.genre_id %>
      </div>
      <div class="form-group d-flex align-items-center">
        税込価格(税抜価格)
        <%=@item.price %>
      </div>
      <div class="form-group d-flex align-items-center">
        販売ステータス
        <% if @item.is_active == true %>
          販売中
        <% elsif @item.is_active == false %>
          販売停止中
        <% end %>
      </div>
      <div class="form-group">
        <%= link_to edit_admin_item_path(@item.id) do %>
          <%= submit_tag '編集する' ,class: "btn btn-success" %>
        <% end %>
      </div>
