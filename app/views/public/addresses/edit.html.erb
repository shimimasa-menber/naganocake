<div class="container">
  <div class="row">
    <div class = "col-xl-9">
      <div class="row">
        <div class = "col-xl-3 mt-4">
          <h4 style = "background-color: #d3d3d3;">配送先編集</h4>
        </div>
      </div>
      <% if @address.errors.any? %>
      <%= @address.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
      <% end %>
      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <div class="form-group d-flex align-items-center mt-4">
          <div style = "width: 30%;">
            郵便番号(ハイフンなし)
          </div>
          <%= f.text_field :postal_code ,class: "form-control", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            住所
          </div>
          <%= f.text_field :address ,class: "form-control", style: "width: 60%;" %>
        </div>
        <div class="form-group d-flex align-items-center mb-5">
          <div style = "width: 30%;">
            宛名
          </div>
          <%= f.text_field :name ,class: "form-control", style: "width: 30%;" %>
          <%= f.submit '変更内容を保存' ,class: "btn btn-success ml-auto" %>
        </div>
      <% end %>
    </div>
  </div>
</div>