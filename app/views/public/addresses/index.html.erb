<div class="container">
  <div class="row">
    <div class = "col-xl-9">
      <div class="row">
        <div class = "col-xl-3 mt-4">
          <h4 style = "background-color: #d3d3d3;">配送先登録/一覧</h4>
        </div>
      </div>
      <% if @address.errors.any? %>
      <%= @address.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
      <% end %>
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
        <div class="form-group d-flex align-items-center mt-4">
          <div style = "width: 30%;">
            郵便番号(ハイフンなし)
          </div>
          <%= f.text_field :postal_code ,class: "form-control", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            住所
          </div>
          <%= f.text_field :address ,class: "form-control", style: "width: 60%;" %>
        </div>
        <div class="form-group d-flex align-items-center mb-5">
          <div style = "width: 30%;">
            宛名
          </div>
          <%= f.text_field :name ,class: "form-control", style: "width: 30%;" %>
          <%=link_to addresses_path, class: "btn btn-success ml-auto" do %>
            新規登録
          <% end %>
        </div>
      <% end %>
    </div>
    <div class = "col-xl-8">
      <table class = "table mt-5">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%=link_to edit_address_path, method: :patch, class: "btn btn-success" do %>
                  編集する
                <% end %>
                <%=link_to addresses_path, method: :delete, class: "btn btn-danger" do %>
                　削除する
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>