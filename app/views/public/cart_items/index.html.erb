<div class="container">
  <div class="row">
    <div class = "col-xl-3 offset-xl-1 mt-4">
      <h4 style = "background-color: #d3d3d3;">ショッピングカート</h4>
    </div>
  </div>
  <div class="row">
    <div class = "col-xl-10 offset-xl-1">
      <table class = "table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.image, :size => '50x50' %>
                <%= cart_item.item.name %>
              </td>
              <td>¥<%= cart_item.item.price %></td>
              <%= form_with model: @cart_item, url: cart_items_path do |f| %>
              <td>
                <%= f.select :amount, *[1..5] %>
                <%= f.submit '変更' ,class: "btn btn-success" %>
              </td>
              
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>