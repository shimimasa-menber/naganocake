<div class="container">
  <div class="row">
    <div class = "col-xl-9">
      <div class="row">
        <div class = "col-xl-3 mt-4">
          <h4 style = "background-color: #d3d3d3;">会員情報編集</h4>
        </div>
      </div>
      <% if @customer.errors.any? %>
      <%= @customer.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <div class="form-group d-flex align-items-center mt-3">
          <div style = "width: 30%;">
            氏名
          </div>
          <%= f.text_field :last_name ,class: "form-control", style: "width: 30%;" %>
          <%= f.text_field :first_name ,class: "form-control ml-5", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            フリガナ
          </div>
          <%= f.text_field :last_name_kana ,class: "form-control", style: "width: 30%;" %>
          <%= f.text_field :first_name_kana ,class: "form-control ml-5", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            郵便番号
          </div>
          <%= f.text_field :postal_code ,class: "form-control name", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            住所
          </div>
          <%= f.text_field :address ,class: "form-control", style: "width: 66%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            電話番号
          </div>
          <%= f.text_field :telephone_number ,class: "form-control", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            メールアドレス
          </div>
          <%= f.text_field :email ,class: "form-control", style: "width: 30%;" %>
        </div>
        <div class = "text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-success mt-5 mr-5" %>
      <% end %>
          <%=link_to customers_confirm_path, class: "btn btn-danger mt-5 ml-5" do %>
            退会する
          <% end %>
        </div>
    </div>
  </div>
</div>