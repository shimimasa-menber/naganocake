<div class="container">
  <div class="row">
    <div class = "col-xl-3">
      <table class = "table mt-3">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = "col-xl-8 offset-xl-1 mt-4">
      <h3 style = "background-color: #d3d3d3; width: 35%;">商品一覧 (全<%= @items.count %>件)</h3>
      <div class="row">
        <% @items.each do |item| %>
        <div class = "col-xl-3 mt-4">
          <% if customer_signed_in? %>
            <%= link_to item_path(item.id) do %>
              <%#= image_tag item.image, :size => '160x160' %>
            <% end %>
          <% else %>
            <%= link_to new_customer_session_path do %>
              <%#= image_tag item.image, :size => '160x160' %>
            <% end %>
          <% end %>
           <div class = "mt-3">
            <%=item.name %><br>
            <%=item.with_tax_price %>(税込)
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>