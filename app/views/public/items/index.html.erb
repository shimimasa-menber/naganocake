<div class="container">
  <div class="row">
    <div class = "col-xl-3">
      <table class = "table">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = "col-xl-8 offset-xl-1">
    <H1>商品一覧</H1>
      <div class="row">
        <% @items.each do |item| %>
        <div class = "col-xl-3">
          <% if customer_signed_in? %>
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.image, :size => '160x160' %>
            <% end %>
          <% else %>
            <%= link_to new_customer_session_path do %>
              <%= image_tag item.image, :size => '160x160' %>
            <% end %> 
          <% end %> 
              <%=item.name %><br>
              ¥<%=item.price %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>