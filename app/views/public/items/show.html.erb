<div class="container">
  <div class="row">
    <div class = "col-xl-3">
      <table class = "table">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = "col-xl-2 offset-xl-1">
      <%= image_tag @item.image, :size => '200x200' %>
    </div>
    <div class = "col-xl-4 offset-xl-1">
      <h3><%= @item.name %></h3>
      <h4><%= @item.introduction %></h4>
      <h4>¥<%= @item.price %>(税込)</h4>
      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.select :amount, *[1..3] %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.hidden_field :customer_id, :value => @customer.id %>
        <%= f.submit 'カートに追加する' ,class: "btn btn-success btn-lg mb-5" %>

      <% end %>
    </div>
  </div>
</div>
