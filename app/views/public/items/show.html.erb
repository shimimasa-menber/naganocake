<div class="container">
  <div class="row">
    <div class = "col-xl-3">
      <table class = "table mt-3">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = "col-xl-2 offset-xl-1 mt-4">
      <%= image_tag @item.image, :size => '200x200' %>
    </div>
    <div class = "col-xl-4 offset-xl-1 mt-4">
      <h4><%= @item.name %></h4>
      <h4><%= @item.introduction %></h4>
      <h4>¥<%= @item.with_tax_price %>(税込)</h4>
      <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
        <div class = "mt-5">
          <%= f.select :amount, *[1..5] %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.hidden_field :customer_id, :value => @customer.id %>
          <%= f.submit 'カートに追加する' ,class: "btn btn-success ml-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
