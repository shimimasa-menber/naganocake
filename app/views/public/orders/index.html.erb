<div class="container">
  <div class="row">
    <div class = "col-xl-2 offset-xl-1 mt-4">
      <h4 style = "background-color: #d3d3d3;">注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class = "col-xl-12">
       <table class = "table mt-3">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td>
              <%= order.postal_code %>
              <%= order.address %>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %>
              <% end %>
            </td>
            <td><%= order.total_payment %></td>
            <td><%= order.status_i18n %></td>
            <td>
              <%= link_to order_path(order.id), class: "btn btn-success" do %>
                表示する
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>