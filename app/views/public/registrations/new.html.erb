<% if flash[:notice] %>
  <H5 id="notice">
    <%= flash[:notice] %>
  </H5>
<% end %>
<div class="container">
  <div class="row">
    <div class = "col-xl-9 mt-4">
      <div class="row">
        <div class = "col-xl-3">
          <h4 style = "background-color: #d3d3d3;">新規会員登録</h4>
        </div>
      </div>
      <% if @customer.errors.any? %>
      <%= @customer.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
        <div class="form-group d-flex align-items-center mt-3">
          <div style = "width: 30%;">
            <label for="customer_name">名前</label>
          </div>
          <%= f.text_field :last_name ,class: "form-control name ", style: "width: 30%;" %>
          <%= f.text_field :first_name ,class: "form-control name ml-5", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="customer_name">フリガナ</label>
          </div>
          <%= f.text_field :last_name_kana ,class: "form-control name", style: "width: 30%;" %>
          <%= f.text_field :first_name_kana ,class: "form-control name ml-5", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="customer_email">メールアドレス</label>
          </div>
          <%= f.text_field :email ,class: "form-control name", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="customer_postal_code">郵便番号(ハイフンなし)</label>
          </div>
          <%= f.text_field :postal_code ,class: "form-control name", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="customer_address">住所</label>
          </div>
          <%= f.text_field :address ,class: "form-control name", style: "width: 66%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="customer_telephone_number">電話番号(ハイフンなし)</label>
          </div>
          <%= f.text_field :telephone_number ,class: "form-control name", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="customer_encrypted_password">パスワード(6文字以上)</label>
          </div>
          <%= f.password_field :password ,class: "form-control name", style: "width: 30%;" %>
        </div>
        <div class="form-group d-flex align-items-center">
          <div style = "width: 30%;">
            <label for="customer_encrypted_password">パスワード(確認用)</label>
          </div>
          <%= f.password_field :password_confirmation ,class: "form-control name", style: "width: 30%;" %>
        </div>
        <div class="form-group text-center">
          <div style = "width: 90%;">
            <%= f.submit '新規登録' ,class: "btn btn-success btn-lg mb-5" %>
          </div>
        </div>
      <% end %>
      <h4>既に登録済の方</h4>
      <%= link_to "こちら", new_customer_session_path  %>
      からログインしてください。